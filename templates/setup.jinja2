<!DOCTYPE html>
<head>
	<link href="/static/index.css" rel="stylesheet"></link>
	 <script src="static/jquery.js" type="text/javascript"></script>
	 <script src="static/playlists.js" type="text/javascript"></script>
	 <meta name="viewport" content="width=device-width, initial-scale=1" /> 
</head>

<div class="body">
	<input type="text" class="video_dir">Video Dir</input>
	<input type="text" class="thumbnail_dir">Thumbnail Dir</input>
	<input type="text" class="username">Username</input>
	<input type="password" class="password">Password</input>
	<button class="submit">Submit</button>
</div>
<script>

		$(".submit")[0].onclick=function(p){
			var password = $(".password").val();
			var username = $(".username").val();
			var video_dir = $(".video_dir").val();
			var thumbnail_dir=$(".thumbnail_dir").val();
			output = {password:password,username:username,
				video_dir:video_dir,thumbnail_dir:thumbnail_dir};
			output = JSON.stringify(output);
			console.log(output);
			console.log($(".password"));
			console.log($("#username"));

		$.ajax({url:"/api/setup",type:"POST",data:output,contentType:"application/json",dataType:"json",mimeType:"application/json"});
		}
</script>
